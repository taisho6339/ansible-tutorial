<VirtualHost *:80>
    ServerName {{ apache_server_name }}
    DocumentRoot {{ apache_document_root }}

    ErrorLog ${APACHE_LOG_DIR}/{{ apache_server_name }}_error_log
    CustomLog ${APACHE_LOG_DIR}/{{ apache_server_name }}_access_log combined
</VirtualHost>

<Directory {{ apache_document_root }}>
    Require all granted
    AllowOverride All
</Directory>
